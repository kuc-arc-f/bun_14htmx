{
  "name": "bun_14htmx",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bunx nodemon",
    "dev:test": "NODE_ENV=develop bun run src/index.ts",
    "build": "bun build --target=node --minify src/index.ts --outfile dist/index.js",
    "build:prod": "NODE_ENV=production bun build --target=node --minify src/index.ts --outfile dist/index.js",
    "clean": "bun run rimraf dist && bun run rimraf public/static",
    "build:css" : "bunx tailwindcss -i ./src/index.css -o ./public/static/index.css",
    "start": "NODE_ENV=production bun run dist/index.js",
    "watch": "NODE_ENV=develop bun --watch src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "autoprefixer": "^10.4.20",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.41",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.7.5",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2"
  }
}
